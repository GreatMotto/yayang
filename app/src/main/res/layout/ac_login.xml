<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/main"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/five_magin"
                android:src="@mipmap/login_4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_magin"
                android:layout_marginRight="@dimen/double_magin"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/big_text_size" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_country_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/tv_country_code"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/country_code_bg"
                            android:padding="@dimen/magin"
                            android:singleLine="true"
                            android:text="+65"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/normal_text_size" />

                        <ImageView
                            android:id="@+id/iv_country_code_drop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/drop_arrow" />
                    </RelativeLayout>


                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/magin"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:background="@mipmap/mobile_bg"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:padding="@dimen/magin"
                        android:textColor="@color/hint_color"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/double_magin"
                    android:text="Enter Password"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/big_text_size" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin"
                    android:background="@mipmap/password_bg"
                    android:hint="Minimum 6 Alphanumeric Characters"
                    android:fontFamily=""
                    android:inputType="textPassword"
                    android:padding="@dimen/magin"
                    android:singleLine="true"
                    android:textColor="@color/hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/normal_text_size" />


                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/three_magin"
                    android:layout_marginTop="@dimen/three_magin"
                    android:background="@mipmap/button"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@mipmap/shape_1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Forgot Your Password?"
                    android:textColor="@color/login_text_forgot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@mipmap/shape_2" />

                <TextView
                    android:id="@+id/tv_not_member"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Not Yet A Member?"
                    android:textColor="@color/login_text_forgot" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_magin"
                    android:text="For More Information"
                    android:textColor="@color/orange" />

                <TextView
                    android:id="@+id/tv_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/three_magin"
                    android:layout_marginTop="@dimen/half_magin"
                    android:text="Contact Us"
                    android:textColor="@color/login_text_forgot"
                    android:textSize="@dimen/big_text_size" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/line_bottom" />
    </LinearLayout>

</ScrollView>



