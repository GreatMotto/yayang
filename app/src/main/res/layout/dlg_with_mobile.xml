<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@null"
    android:fillViewport="false">

    <LinearLayout
        android:id="@+id/ll_dlg_fpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/double_magin"
        android:layout_marginRight="@dimen/double_magin"
        android:background="@drawable/notice_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_magin"
            android:layout_marginRight="@dimen/double_magin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/double_magin"
                android:layout_marginTop="@dimen/double_magin">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/magin"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="@dimen/six_magin"
                    android:layout_marginRight="@dimen/six_magin"
                    android:layout_marginTop="@dimen/magin"
                    android:gravity="center"
                    android:textColor="@color/item_content_color"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <RelativeLayout

                    android:id="@+id/rl_country_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tv_country_code"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@mipmap/country_code_bg"
                        android:padding="@dimen/magin"
                        android:singleLine="true"
                        android:text="+65"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_country_code_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/magin"
                        android:src="@mipmap/drop_arrow" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="@mipmap/mobile_bg"
                    android:hint="Mobile"
                    android:singleLine="true"
                    android:inputType="number"
                    android:padding="@dimen/magin"
                    android:textColor="@color/hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_btnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/three_magin"
                    android:layout_marginTop="@dimen/double_magin"
                    android:background="@mipmap/button"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/big_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>