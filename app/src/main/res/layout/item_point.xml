<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/half_magin"
        android:layout_marginTop="@dimen/half_magin"
        android:layout_marginBottom="@dimen/half_magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="31/01/15"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/half_magin"
        android:layout_marginTop="@dimen/half_magin"
        android:layout_marginBottom="@dimen/half_magin"
        android:paddingLeft="@dimen/half_magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Cleanser"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/magin"
        android:paddingLeft="@dimen/half_magin"
        android:layout_marginTop="@dimen/half_magin"
        android:layout_marginBottom="@dimen/half_magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="20000"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />

</LinearLayout>
