<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="@dimen/half_magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="123456789"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.1"
        android:layout_marginTop="@dimen/half_magin"
        android:layout_marginBottom="@dimen/half_magin"
        android:layout_marginLeft="-4dp"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="none"
        android:text="31/01/15"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="@dimen/half_magin"
        android:paddingLeft="@dimen/magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Cleanser"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_right1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/half_magin"
        android:paddingLeft="@dimen/half_magin"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="1"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/tv_right2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/half_magin"
        android:layout_marginTop="@dimen/half_magin"
        android:paddingLeft="@dimen/magin"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="none"
        android:text="2000"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/small_text_size" />
    <LinearLayout
        android:id="@+id/ll_plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/magin"
        android:paddingLeft="@dimen/half_magin"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/jiahao" />
    </LinearLayout>
</LinearLayout>
