<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <include layout="@layout/titlebar_below" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/sep" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/three_magin"
        android:layout_marginLeft="@dimen/double_magin"
        android:layout_marginTop="@dimen/three_magin"
        android:drawableLeft="@mipmap/email"
        android:drawablePadding="@dimen/double_magin"
        android:text="admin@colorplay.com.sg"
        android:textColor="@color/item_content_color"
        android:textSize="@dimen/normal_text_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/sep" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/three_magin"
        android:layout_marginLeft="@dimen/double_magin"
        android:layout_marginTop="@dimen/three_magin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/address" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_magin"
            android:layout_marginRight="120dp"
            android:text="Color Play Enterprise Pte Ltd"
            android:textColor="@color/item_content_color"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/sep" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/three_magin"
        android:layout_marginLeft="@dimen/double_magin"
        android:layout_marginTop="@dimen/three_magin"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="@dimen/double_magin"
        android:text="+65 6453 4955"
        android:textColor="@color/item_content_color"
        android:textSize="@dimen/normal_text_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@mipmap/sep" />
</LinearLayout>