<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/magin"
        android:paddingTop="@dimen/magin">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_back" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/double_magin"
            android:gravity="center_vertical"
            android:text="@string/welcome"
            android:textColor="@color/normal_orange"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/header_commen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="@dimen/double_magin"
                android:paddingLeft="@dimen/double_magin"
                android:paddingRight="@dimen/double_magin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Rewards Catalogue"
                    android:layout_marginBottom="@dimen/half_magin"
                    android:textColor="@color/normal_orange"
                    android:textSize="@dimen/normal_text_size" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/magin"
                    android:layout_toLeftOf="@+id/tv_allview1"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back_right" />

                <TextView
                    android:id="@+id/tv_allview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="@string/viewall"
                    android:textColor="@color/normal_orange"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <com.edenred.android.apps.avenesg.view.HorizontalListView
                android:id="@+id/hlistview1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/magin"
                android:visibility="gone"></com.edenred.android.apps.avenesg.view.HorizontalListView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="@dimen/magin"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/double_magin"
                android:background="@color/grey_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="@dimen/double_magin"
                android:paddingLeft="@dimen/double_magin"
                android:paddingRight="@dimen/double_magin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/half_magin"
                    android:text="News and Promotions"
                    android:textColor="@color/normal_orange"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_allview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/viewall"
                    android:textColor="@color/normal_orange"
                    android:textSize="@dimen/normal_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/magin"
                    android:layout_toLeftOf="@+id/tv_allview2"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_right" />
            </RelativeLayout>

            <com.edenred.android.apps.avenesg.view.HorizontalListView
                android:id="@+id/hlistview2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/magin"
                android:visibility="gone"></com.edenred.android.apps.avenesg.view.HorizontalListView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="@dimen/magin"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_magin"
                android:background="@mipmap/bottom_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/double_magin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For more details:"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.eau-thermale-avene.sg"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/magin"
                android:layout_marginTop="@dimen/double_magin"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/ll_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_magin"
                android:background="@mipmap/orange_white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/plus" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/double_magin"
                android:layout_marginTop="@dimen/magin"
                android:gravity="center"
                android:text="Register a new purchase"
                android:textColor="@color/normal_orange"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/line_bottom" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
