<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/qty_box"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_subtract"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/subtract" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_calagolue_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:maxLength="2"
        android:text="1"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/normal_text_size" />

    <LinearLayout
        android:id="@+id/ll_plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_magin"
            android:scaleType="centerCrop"
            android:src="@mipmap/jiahao1" />
    </LinearLayout>
</LinearLayout>