<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <include layout="@layout/titlebar_below" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/catalogue_title_commen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/double_magin"
                android:layout_marginRight="@dimen/double_magin"
                android:layout_height="188dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_magin"
                android:background="@mipmap/flame"
                android:gravity="center">

                <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--android:id="@+id/iv_pic"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="180dp"-->
                    <!--fresco:fadeDuration="300"-->
                    <!--fresco:actualImageScaleType="centerInside"-->
                    <!--fresco:roundAsCircle="false"-->
                    <!--fresco:roundedCornerRadius="2dp" />-->

                <ImageView
                    android:id="@+id/iv_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:scaleType="centerInside"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/double_magin"
                android:text="Oil Control foam 125ml"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/big_text_size" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_magin"
                android:layout_marginRight="@dimen/double_magin"
                android:text="the oil"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/normal_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_magin"
                android:background="@mipmap/grey_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <include
                        layout="@layout/plus_commen"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/half_magin"
                        android:text="Quantity"
                        android:textColor="@color/grey_dark"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/l"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="3000"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/big_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/half_magin"
                        android:text="points"
                        android:textColor="@color/grey_dark"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/three_magin"
                android:layout_marginTop="@dimen/three_magin"
                android:background="@mipmap/button"
                android:gravity="center"
                android:text="Add To Cart"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/line_bottom" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
